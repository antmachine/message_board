<div class="container col-sm-12 text-left">
	<% @posts.each do |post| %>
		<div class="row post-area">
		
		<div class="col-sm-1">
		<form action="<%= edit_post_path(post.id)  %>" method ="get">
			<button type="submit" class="btn btn-default btn-lg glyphicon-pencil">
			</button>
		</form>
		</div>

		<div class="col-sm-11">
			<h4><%= post.title %></h4>
		</div>
		
		<div class="col-sm-11">
			<%= post.content %>
		</div>

		<div class="post-info col-sm-11 col-sm-offset-1">
			Posted <%= post.updated_at.to_formatted_s(:long) %>
		</div>

		<form action="/posts" method ="delete">
			<button type="submit" class="btn btn-default btn-lg">
				<span class="glyphicon glyphicon-remove"></span>
			</button>
		</form>

		</div>
	<% end %>
</div>

