<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<% @posts.each do |post| %>
			<div class="post-area row">
				<div class="col-sm-1">
					<form action="<%= edit_post_path(post.id)  %>" method ="get" role="form">
					<button type="submit" class="btn-lg edit-button"><span class="glyphicon-pencil glyphicon"></span></button>
					</form>
				</div>
				<div class="col-sm-10">
					<h4><%= post.title %></h4>
				</div>
				<div class="col-sm-1">
					<form action="/delete/<%= post.id  %>" method ="post" role="form">
						<%= token_tag form_authenticity_token %>
						<button type="submit" class="btn-lg edit-button"><span class="glyphicon-remove glyphicon"></span></button>
					</form>
				</div>
				<div class="col-sm-10 col-sm-offset-1 post-content-display">
					<%= link_to post_path(post.id) do %>
						<div id="hidden-link" class="col-sm-10 col-sm-offset-1 text-center">
						  <h2>Read Full Post</h2>
						</div>
					<% end %>
					<div id="content">
						<%= post.content %>
					</div>
				</div>
				<div class="post-time col-sm-11 col-sm-offset-1">
					Posted <%= post.updated_at.to_formatted_s(:long) %>
				</div>
			</div>
			<% end %>
		</div>
	</div>			
</div>

