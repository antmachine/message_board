<div class="row">
	<div class="col-sm-12">
		<% @posts.each do |post| %>
		<div class="post-area row">
			<div class="col-sm-1">
				<form action="<%= edit_post_path(post.id)  %>" method ="get" role="form">
				<button type="submit" class="btn-lg edit-button"><span class="glyphicon glyphicon-pencil"></span></button>
				</form>
				<form action="<%= post_path(post.id)  %>" method ="get" role="form">
				<button type="submit" class="btn-lg edit-button"><span class="glyphicon glyphicon-eye-open"></span></button>
				</form>
			</div>
			<div class="col-sm-10">
				<h4><%= post.title %></h4>
					<div id="content" class="post-content-display">
						<%= post.content %>
					</div>
			</div>
			<div class="col-sm-1">
				<form action="/delete/<%= post.id  %>" method ="post" role="form">
					<%= token_tag form_authenticity_token %>
					<button type="submit" class="btn-lg edit-button"><span class="glyphicon-remove glyphicon"></span></button>
				</form>
			</div>
			<div class="post-time col-sm-11 col-sm-offset-1">
				Posted <%= post.updated_at.to_formatted_s(:long) %>
			</div>
		</div>
		<% end %>
	</div>
</div>			

