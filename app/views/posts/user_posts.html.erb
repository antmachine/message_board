<div class="container">
	<div class="row">
		<% @posts.each do |post| %>

		<form action="<%= edit_post_path(post.id)  %>" method ="get">
			<button type="submit" class="btn btn-default btn-lg glyphicon-pencil">
			</button>
		</form>
			
			<div class="post text-left">
				<%= p post.content %>
			</div>

			<p class="post-date span11 text-left col-sm-offset-1">
				Posted <%= post.created_at.to_formatted_s(:long) %>
			</p>
		<% end %>
	</div>
</div>
