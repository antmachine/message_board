<div class="container col-sm-12 text-left">
	<% @posts.each do |post| %>
		<div class="post-area row">
		
		<div class="col-sm-1">
			<form action="<%= edit_post_path(post.id)  %>" method ="get">
				<button type="submit" class="btn btn-default btn-lg glyphicon-pencil glyphicon">
				</button>
			</form>	
		</div>

		<div class="col-sm-10">
			<h4><%= post.title %></h4>
		</div>
		
		<div class="col-sm-1">
			<form action="/delete/<%= post.id  %>" method ="post">
				<%= token_tag form_authenticity_token %>
				<button type="submit" class="btn btn-default btn-lg glyphicon-remove glyphicon">
				</button>
			</form>
		</div>

		<div class="col-sm-11 col-sm-offset-1 post-content-display">
			<%= post.content %>
		</div>

		<div class="post-time col-sm-11 col-sm-offset-1">
			Posted <%= post.updated_at.to_formatted_s(:long) %>
		</div>

		</div>
	<% end %>
</div>

