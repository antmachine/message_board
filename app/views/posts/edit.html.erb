<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<h2>Edit Your Post</h2>
		</div>
	</div>
	<form action="/edit/<%= params[:id] %>" method="post">
		<%= token_tag form_authenticity_token %>
			<div class="row">
				<div class="col-sm-4">
					<div class="form-group">
						<label for="post_title">Title</label>
						<input id="post_title" name="post[title]" class="form-control" value="<%= @post.title  %>"></input>
					</div>
					<div class="form-group">
						<label for="post_name" >Name</label>
						<input id="post_name" name="post[name]" class="form-control" value="<%= @post.name  %>"></input>
					</div>
				</div>
				<div class="col-sm-8">
					<label for="post_content">Message</label>
					<textarea id="post_content" name="post[content]" class="form-control"><%= @post.content  %></textarea>
				</div>
				
				<div class="col-sm-12 text-right">
					<button name="button" class="btn-submit">Update Post</button>
				</div>
	</form>

				<form action="posts/new" method="link">
					<input class="btn" type="submit" value="Delete Post">
				</form>

		</div>
</div>


